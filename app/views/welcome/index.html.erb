<h1> Welcome to the Bentley Park Tennis Courts </h1>
<p>See a list of our events below </p>

<%= month_calendar events: @meetings do |date, meetings| %>
  <%= date.strftime("%d") %>

  <% meetings.each do |meeting| %>
    <div>
      <%= meeting.name %><br/>
      <%= meeting.start_time.strftime("%I:%M%p") %> - <br/>
      <%= meeting.end_time.strftime("%I:%M%p") %><br/>
      Created by: <%= meeting.username %>
    </div>
  <% end %>
<% end %>


<p><%= link_to "Add An Event", meetings_new_path %></p>
<p><%= link_to "See your events", meetings_path %> </p>
